<?xml version="1.0" encoding="utf-8"?> <!-- CD21068 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="415dp"
    android:layout_height="match_parent"
    tools:context=".Booking">


    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="37dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/font1"

        android:text="SEND"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description"
        app:layout_constraintVertical_bias="0.8" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="415dp"
        android:layout_height="50dp"
        android:fontFamily="@font/font1"
        android:text=" blakebrooke18@gmail.com"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/Appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <EditText
        android:id="@+id/Appointment"
        android:layout_width="415dp"
        android:layout_height="50dp"
        android:fontFamily="@font/font1"
        android:text=" Type of appointment"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <EditText
        android:id="@+id/Description"
        android:layout_width="415dp"
        android:layout_height="530dp"
        android:fontFamily="@font/font1"
        android:text="Owner Name: \n\nPet Type:\n\nPet Breed: \n\nContact Number: \n\nBooking Date:\n\nBooking Time:"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Appointment" />
</androidx.constraintlayout.widget.ConstraintLayout>
